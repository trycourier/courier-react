{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "jsx": "react",
    "checkJs": false
  },
  "exclude": [
    "**/__mocks__/**",
    "**/__tests__/**",
    "**/*.spec.ts",
    "**/*.story.ts",
    "**/dist/**",
    "**/typings/**",
    "node_modules"
  ]
}
