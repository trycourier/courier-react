{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "exclude": [
    "**/__mocks__/**",
    "**/__tests__/**",
    "**/*.spec.ts",
    "**/*.story.ts",
    "**/dist/**",
    "**/typings/**",
    "node_modules"
  ],
  "include": [
    "../types/@types/*/index.d.ts",
    "**/*.ts",
    "src/**/*.tsx",
    "src/**/*.ts"
  ]
}
