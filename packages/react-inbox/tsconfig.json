{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noImplicitAny": false,
    "paths": {
      "~/*": ["src/*"],
      "@trycourier/react-shared": ["../react-shared"]
    }
  },
  "exclude": [
    "**/__mocks__/**",
    "**/__tests__/**",
    "**/*.spec.ts",
    "**/*.story.ts",
    "**/dist/**",
    "**/typings/**",
    "node_modules"
  ],
  "include": ["../types/@types/*/index.d.ts", "**/*.ts", "src/index.tsx"],
  "references": [{ "path": "../react-shared" }]
}
